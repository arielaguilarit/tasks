{
  "compilerOptions": {
    "types": ["vitest/importMeta"],
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable", "WebWorker"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "cypress",
    ".idea",
    ".git",
    "cache",
    "output",
    "temp",
    "karma",
    "rollup",
    "webpack",
    "vite",
    "vitest.config.ts",
    "jest",
    "ava",
    "babel",
    "nyc",
    "cypress",
    "tsup",
    "build"
  ]
}
